{
  "name": "open-momotalk",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc&&node scripts/build",
    "clean": "tsc -b --clean",
    "preview": "NODE_ENV=production npm run build && NODE_ENV=preview node server/index.js",
    "deploy": "npm i --omit=dev && npm run build && npm run start",
    "dev": "NODE_ENV=development nodemon --watch server server/index.ts",
    "lint": "eslint --ext .ts,.tsx --resolve-plugins-relative-to .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write \"{server,client}/**/*.{ts,json}\"",
    "restart": "npm i --omit=dev && npm run build && pm2 restart momotalk",
    "start": "pm2 start server/index.js --name momotalk",
    "stop": "pm2 delete momotalk",
    "postinstall": "prisma generate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@prisma/client": "^5.4.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-mount": "^4.0.3",
    "@types/koa-static": "^4.0.2",
    "@types/ws": "^8.5.6",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "html-minifier-terser": "^7.2.0",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "pm2": "^5.3.0",
    "typescript": "^5.3.2",
    "vite": "^4.3.9",
    "vite-plugin-compression2": "^0.10.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "lint-staged": "^13.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.3",
    "prisma": "^5.4.1",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "ts-node": "^10.9.1"
  }
}
